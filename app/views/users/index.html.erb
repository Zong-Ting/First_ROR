<p id="notice"><%= notice %></p>
<h1>Users List</h1>
<%= form_tag users_path, method: :get do %>
   <%= text_field_tag :search %>
   <%= submit_tag "Search 使用者" %>
 <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class:"btn" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn" %></td>
        <td><%= link_to 'Destroy', user,class:"btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @posts %><br><br>
<%= link_to 'New User', new_user_path %>
